<h1>Listing paragraphs</h1>

<table>
  <tr>
    <th>Note</th>
    <th>Prev</th>
    <th>Next</th>
    <th>Locking user</th>
    <th>Text</th>
    <th>Lock time</th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @paragraphs.each do |paragraph| %>
  <tr>
    <td><%= paragraph.note %></td>
    <td><%= paragraph.prev %></td>
    <td><%= paragraph.next %></td>
    <td><%= paragraph.locking_user %></td>
    <td><%= paragraph.text %></td>
    <td><%= paragraph.lock_time %></td>
    <td><%= link_to 'Show', paragraph %></td>
    <td><%= link_to 'Edit', edit_paragraph_path(paragraph) %></td>
    <td><%= link_to 'Append new paragraph', append_paragraph_path(paragraph) %></td>
    <td><%= link_to 'Destroy', paragraph, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

