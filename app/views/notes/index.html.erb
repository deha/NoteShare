<h1>Listing notes</h1>

<table>
  <tr>
    <th>Folder</th>
    <th>Author</th>
    <th>Title</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @notes.each do |note| %>
  <tr>
    <td><%= note.folder_id %></td>
    <td><%= "#{note.author.first_name} #{note.author.last_name}" %></td>
    <td><%= note.title %></td>
    <td><%= link_to 'Show', note %></td>
    <td><%= link_to 'Edit', edit_note_path(note) %></td>
    <td><%= link_to 'Destroy', note, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

